
<div class="login-wrap" style="margin-top: 90px;">
	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Iniciar</label>
		<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Registrarse</label>
		<div class="login-form">
			<div class="sign-in-htm">
                {{!-- Inicio de Sesion --}}
                <form action="/usuarios/log" method="POST">
				<div class="group">
					<label for="user" class="label">Nombre</label>
					<input  type="text" class="input" name="nombre">
				</div>
				<div class="group">
					<label for="pass" class="label">Contraseña</label>
					<input  type="password" class="input" name="contra" data-type="password">
				</div>
				<div class="group">
					<input id="check" type="checkbox" class="check" checked>
					<label for="check"><span class="icon"></span>No cerrar ssesion</label>
				</div>
				<h5>{{message}}</h5>
				<div class="group">
					<input type="submit" class="button" value="Sign In">
				</div>
				<div class="hr"></div>
				
			</div>
            </form>
            {{!-- Crear sesion --}}
            <form action="/usuarios/create" method="POST">
			<div class="sign-up-htm">
				<div class="group">
					<label for="mail" class="label" >E-mail</label>
					<input  type="text" name="mail"class="input">
				</div>
				<div class="group">
					<label for="nombre" class="label" >Nombre</label>
					<input  type="text"name="nombre" class="input" >
				</div>
				<div class="group">
					<label for="contra" class="label">Contraseña</label>
					<input  type="password"  name="contra"class="input" >
				</div>
				<div class="group">
					<input type="submit" class="button" >
				</div>
				<div class="hr"></div>
				<div class="foot-lnk">
				</div>
			</div>
		</div>
	</div>
</div>
</form>